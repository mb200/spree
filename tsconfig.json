{
  "compilerOptions": {
    "target": "es5",
    "lib": ["esnext", "dom"],
    "module": "commonjs",
    "rootDir": "src",
    "allowJs": true,
    "outDir": "dist",
    "declaration": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "strictNullChecks": true,
    "strict": true,
    "jsx": "preserve"
  },
  "include": ["./src"],
  "exclude": ["node_modules"]
}
